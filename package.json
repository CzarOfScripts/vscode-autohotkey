{
	"name": "ahk-simple-ls",
	"displayName": "AutoHotKey Simple Support",
	"description": "Simple implementation of an ahk language server in node.",
	"version": "0.1.0",
	"author": "helsmy",
	"license": "LGPLv3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/helsmy/vscode-autohotkey"
	},
	"publisher": "helsmy",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"ahk", "autohotkey", "AutoHotkey"
	],
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ahk"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "ahk",
				"aliases": [
					"AutoHotkey",
					"autohotkey",
					"ahk"
				],
				"extensions": [
					".ahk"
				],
				"configuration": "./ahk.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ahk",
				"scopeName": "source.ahk",
				"path": "./syntaxes/ahk.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "ahk",
				"path": "./snippets/ahk.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "AutoHotKey",
			"properties": {
				"languageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "node ./client/out/test/runTest",
		"publish": "vsce publish",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/mocha": "^7.0.2",
		"mocha": "^8.0.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	}
}
